$("ul.errors").html("")
<% if @fact.errors.any? %>
  <% @fact.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $("#new_fact_modal").modal("hide")
  $('#facts_table').append("<%= j render partial: 'table_row', locals: {fact: @fact } %>");
<% end %>
