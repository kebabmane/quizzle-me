<% modal ||= false %>
<% remote = modal ? true : false %>
<%= form_for(@fact, remote: remote, html: {role: :form, 'data-model' => 'fact'}) do |f| %>

<ul class="errors"></ul>

<div class="form-group">
  <%= f.label :fact_string, class: 'control-label' %><br>
  <%= f.text_area :fact_string, rows: "10", class: 'form-control' %>
  <span class="help-block"></span>
</div>

<div class="form-group">
  <%= f.label :tag_list, class: 'control-label' %><br>
  <%= f.text_field :tag_list, class: 'form-control' %>
  <span class="help-block"></span>
</div>


  <%= f.hidden_field :user_id %>

  <div class="actions">
    <%= f.submit "Submit", { :class=>"btn btn-primary" } %>
  </div>
<% end %>


<br><br>
